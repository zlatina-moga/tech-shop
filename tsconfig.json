{
  "compilerOptions": {
    "jsx": "react-jsx",
    "target": "es6",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "incremental": true,
    "jsx": "preserve"
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx"
, "contexts/AuthContext.js", "hooks/useLocalStorage.ts", "services/redux/cartRedux.ts", "services/redux/store.ts", "services/itemService.js", "services/productService.js", "services/requester.js", "services/sortingService.js"  ],
  "exclude": [
    "node_modules"
  ]
}
